{
  "manifest_version": 3,
  "name": "Sharelette",
  "version": "1.0",
  "description": "Share the current page using Sharelette and replaces the native share dialog.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    }
  },
  "background": {
    "scripts": ["browser-polyfill.min.js", "scripts.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sharelette@cloudbreak.app"
    }
  }
}
